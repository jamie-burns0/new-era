{
    // "extends": "@tsconfig/node-lts/tsconfig.json",
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "outDir": "./dist",
        "sourceMap": true,
        "rootDirs": [
            "./src"
        ],
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
    }
}
